{
	"schemaVersion": 1,
	"id": "rsmm_fabric",
	"version": "${version}",

	"name": "Redstone Multimeter Fabric",
	"description": "A Fabric port of NarcolepticFrog's Redstone Multimeter Mod",
	"authors": [
		"Space Walker"
	],
	"contributors": [
		"NarcolepticFrog"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/redstone-multimeter",
		"sources": "https://github.com/SpaceWalkerRS/redstone-multimeter-fabric",
		"issues": "https://github.com/SpaceWalkerRS/redstone-multimeter-fabric/issues"
	},

	"license": "MIT Licence",
	"icon": "assets/redstone_multimeter/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [
			"redstone.multimeter.RedstoneMultimeterMod"
		],
		"modmenu": [
			"redstone.multimeter.modmenu.RedstoneMultimeterMod"
		]
	},
	"mixins": [
		"rsmm_fabric.mixins.json"
	],

	"depends": {
		"minecraft": "1.21",
		"fabric-api": ">=${fabric_api_version}"
	},

	"custom": {
		"modmenu": {
			"links": {
				"modmenu.discord": "https://discord.gg/EJC9zkX"
			}
		},
		"multiconnect": {
			"custom_payloads": {
				"allowed_clientbound": "redstone_multimeter:network",
				"allowed_serverbound": "redstone_multimeter:network",
				"clientbound_112_names": {
					"redstone_multimeter:network": "redstone_multimeter"
				},
				"serverbound_112_names": {
					"redstone_multimeter:network": "redstone_multimeter"
				}
			}
		}
	}
}
